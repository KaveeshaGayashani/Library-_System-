<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/books1">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:text="Welcome!"
        android:textColor="@color/white"
        android:background="#80000000"
        android:textSize="40sp" />
    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:text="Library Management System"
        android:textColor="@color/white"
        android:background="#80000000"
        android:layout_marginBottom="10dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:text="Members:"
        android:textColor="@color/white"
        android:background="#80000000"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_gravity="center">

            <Button
                android:id="@+id/btnAddMember"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="navigateToAddMember"
                android:backgroundTint="#cf7f25"
                android:textSize="25dp"
                android:text="Add Member" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_gravity="center">

            <Button
                android:id="@+id/btnViewMember"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="navigateToViewMember"
                android:backgroundTint="#cf7f25"
                android:textSize="25dp"
                android:text="View Member" />
        </FrameLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:text="Books:"
        android:textColor="@color/white"
        android:background="#80000000"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_gravity="center">

            <Button
                android:id="@+id/btnAddBook"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="navigateToAddBook"
                android:backgroundTint="#cf7f25"
                android:textSize="25dp"
                android:text="Add Book" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_gravity="center">

            <Button
                android:id="@+id/btnViewBook"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="navigateToViewBook"
                android:backgroundTint="#cf7f25"
                android:textSize="25dp"
                android:text="View Book" />
        </FrameLayout>

    </LinearLayout>

</LinearLayout>
